---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">Email: {SITE_EMAIL}</div>
          </div>

          <div class="item products">
            <div class="item-title">TQGX</div>
            <a href="/" target="_blank">Blog</a>
            <a href="https://github.com/tqgx" target="_blank">Github</a>
            <a href="https://news.the.top" target="_blank">TOP News</a>
          </div>

          <div class="item community">
            <div class="item-title">Tools</div>
            <a href="https://Piped.video" target="_blank">Piped</a>
            <a href="https://yewtu.be" target="_blank">Invideous</a>
            <a href="https://central.bitdefender.com/devices?service=add_trial&code=34291885-79d4-4ba6-bf01-30b0d6bdd0a1 " target="_blank">Bitdefender 30 Days Trial</a>
          </div>

          <div class="item resources">
            <div class="item-title">More Links</div>
            <a href="https://xgqt.gitlab.io/">XGQT BLOG</a>
            <a href="https://ivonblog.com/">IVON BLOG</a>
          </div>
        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`2023-${year}  ${SITE_NAME}`} 
        </div>
      </div>
    </div>
  </div>
</div>
